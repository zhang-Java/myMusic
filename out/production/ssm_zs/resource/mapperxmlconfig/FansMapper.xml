<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zs.mapper.FansMapper">

    <resultMap id="Fans" type="com.zs.bean.Fans">
        <id column="f_id" property="fId"/>

        <association property="user1" javaType="com.zs.bean.User">
            <id column="u_id" property="uId"/>
            <result column="u_name" property="uName"/>
            <result column="u_password" property="uPassword"/>
            <result column="u_number" property="uNumber"/>
            <result column="u_attention_num" property="uAttentionNum"/>
            <result column="u_fans_num" property="uFansNum"/>
            <result column="u_photo_url" property="uPhotoUrl"/>
        </association>

        <association property="user2" javaType="com.zs.bean.User">
            <id column="u_id" property="uId"/>
            <result column="u_name" property="uName"/>
            <result column="u_password" property="uPassword"/>
            <result column="u_number" property="uNumber"/>
            <result column="u_attention_num" property="uAttentionNum"/>
            <result column="u_fans_num" property="uFansNum"/>
            <result column="u_photo_url" property="uPhotoUrl"/>
        </association>

    </resultMap>

</mapper>